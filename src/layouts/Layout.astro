---
import Header from "../components/Header.astro";
import "@fontsource-variable/onest";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Portfolio Robert Fernandez</title>
  </head>
  <body class="px-6 relative min-h-screen flex flex-col">
    <Header />
    <div class="absolute inset-0 -z-10 w-full h-full bg-[radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)] bg-fixed"></div>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }
  html {
    font-family:
      "Onest variable",
      system-ui,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    scroll-behavior: smooth;

  }
  body {

    margin: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 100vh;
  }

  @media(prefers-reduced-motion: reduce) {
    html{
    scroll-behavior: none;

    }
  }

  .animate-background-shine {
    animation: background-shine 2s linear infinite;

  }

  @keyframes background-shine {
    0% {
      background-position: 0% 0%;
    }
    100% {
      background-position: 100% 0%;
    }
  }
</style>
